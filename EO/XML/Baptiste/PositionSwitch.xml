<?xml version="1.0" encoding="windows-1250"?>
<device>
  <name>
    Position Switch
  </name>
  <description>
    Button encoder multi-choice
  </description>
  <attributes>
    <attribute readOnly="true">
      <name>
        State
      </name>
      <description>
        Represents the button current state
      </description>
      <values type="onoff" />
    </attribute>
    <attribute readOnly="true">
      <name>
        Position
      </name>
      <description>
        Represents the postion of the button
      </description>
      <values type="numeric" />
    </attribute>
    		<attribute readOnly="true">
			<name>EventType</name>
			<description>
				This attribute represents if the sensor throws events
				periodically (period) or on external event (event).
			</description>
			<values type="string">
				<value>period</value>
				<value>event</value>
			</values>
		</attribute>
  </attributes>
</device>




